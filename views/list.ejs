
 <%-include("header") -%>   
 
<div class="box" id="heading">
    <h1><%=listTitle%></h1>
</div>    

<div class="box">

    <% newListItems.forEach((item)=>{ %>
        <div class="item">
            <form  action="/delete/<%=listTitle%>" method="post">
                <input type="checkbox" name="checked" value="<%=item.name%>" onchange="submit()">
            </form>
            <p><%=item.name%></p>
        </div>
    <% }); %>
<!--      
    let pageName;
    if(listTitle=="Today")pageName="/";
    else pageName="/type/<%=listTitle%>"; -->

    <form class="item" action="/type/<%=listTitle%>" method="post">
        <input type="text" name="tasklist" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value=<%=listTitle%> >+</button>
    </form>
    
</div>
  
<%-include("footer") -%>
